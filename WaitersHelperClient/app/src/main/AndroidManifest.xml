        </activity>
        <activity android:name=".activities.users.AddUserActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activities.users.UsersActivity"
                  android:screenOrientation="portrait"
                  android:launchMode="singleInstance">
        </activity>
        <activity android:name=".activities.reports.ReportsActivity"
                  android:screenOrientation="portrait"
                  android:launchMode="singleInstance">
        </activity>
        <activity android:name=".activities.work.WorkActivity"
                  android:screenOrientation="portrait"
                  android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>
