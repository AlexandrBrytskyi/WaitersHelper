<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="brytskyi.waitershelperclient.app.activities.orderings.OrderingDenominationsFragment">

    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
                 android:background="@drawable/fon">

        <ListView
                android:layout_width="fill_parent"
                android:layout_weight="50"
                android:layout_height="0dp"
                android:id="@+id/denominationsList" android:background="#b1faff1f"/>

        <TableRow android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="#b100caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1">

                <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/dishTypeSpinnerInDenominationsListFragment" android:layout_gravity="center" android:gravity="center"/>

                <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:id="@+id/dishSpinnerInDenominationsListFragment" android:layout_gravity="center" android:gravity="center"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/portionsAmountInDenominationListFragment" android:layout_gravity="center"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="#b100caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1">
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/add_new"
                        android:id="@+id/addDenominationButtonInDenominationListFragment" android:layout_gravity="center" android:gravity="center"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>

</FrameLayout>

