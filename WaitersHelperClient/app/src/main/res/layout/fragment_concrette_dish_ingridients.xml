<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="brytskyi.waitershelperclient.app.activities.dishes.ingridients.ConcretteDishIngridientsFragment"
             android:background="@drawable/fon">

    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">

        <TableRow android:layout_weight="1"
                  android:layout_width="fill_parent"
                  android:layout_height="0dp" android:background="#b1feff24">

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1">
                <TextView
                        android:id="@+id/ingridientProduct"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:text="@string/product"
                        android:singleLine="true" android:textStyle="bold" android:layout_gravity="center"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/ingridientAmount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:text="@string/amount"
                        android:singleLine="true" android:textStyle="bold" android:layout_gravity="center"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/ingridientMesur"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:text=""
                        android:singleLine="true" android:textStyle="bold" android:layout_gravity="center"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>

        <ListView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="0dp"
                android:id="@+id/ingridientsList" android:background="#b1feff24"/>

        <TableRow android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="#b100caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1">

                <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/productsSpinner" android:layout_gravity="center" android:gravity="center"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingridientAmountEditInIngridFragment" android:layout_gravity="center"
                        android:gravity="center"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="#b100caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1">
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/add_new"
                        android:id="@+id/addIngridientButton" android:layout_gravity="center" android:gravity="center"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>


</FrameLayout>

