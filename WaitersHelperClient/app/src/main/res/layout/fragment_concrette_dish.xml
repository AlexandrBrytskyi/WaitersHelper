<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".brytskyi.waitershelperclient.app.activities.dishes.ConcretteDishFragment"
                android:background="@drawable/fon">


    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="match_parent">

        <TableRow android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:layout_weight="1">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/name"
                        android:id="@+id/dishNameText" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:textStyle="bold"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/dishNameEdit" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:focusable="true" android:textStyle="bold"/>
            </LinearLayout>
        </TableRow>


        <TableRow android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:layout_weight="1">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/price"
                        android:id="@+id/dishPriceText" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:textStyle="bold"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/dishPriceEdit" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:focusable="true" android:textStyle="bold"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:layout_weight="1">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/type"
                        android:id="@+id/dishTypeText" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:textStyle="bold"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/dishTypeSpinner" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:focusable="true"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:layout_weight="1">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/who_coock"
                        android:id="@+id/whoCoockDishText" android:layout_gravity="center" android:layout_margin="2dp"
                        android:gravity="left" android:textStyle="bold"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/whoCoockDishSpinner" android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="left" android:focusable="true"/>
            </LinearLayout>
        </TableRow>


        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1" android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/description"
                        android:id="@+id/dishDescriptionText" android:layout_gravity="center"
                        android:layout_margin="2dp" android:gravity="left|bottom" android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/is_dish_available"
                        android:id="@+id/isDishAvailableText" android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="top|center"/>

                <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text=""
                        android:id="@+id/availableCheckBox" android:gravity="top" android:layout_gravity="center"
                        android:focusable="true"/>
            </LinearLayout>
        </TableRow>


        <TableRow android:layout_width="fill_parent" android:layout_weight="6" android:layout_height="wrap_content"
                  android:background="#c1faff0a">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:layout_weight="1">
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/dishDescriptionEdit" android:layout_gravity="top|left|center"
                        android:layout_margin="2dp"
                        android:gravity="left" android:focusable="true" android:textStyle="bold"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"
                  android:gravity="center">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_dish"
                    android:id="@+id/changeDishButton" android:gravity="center" android:layout_gravity="center"
                    android:textStyle="bold"/>

        </TableRow>

    </TableLayout>


</RelativeLayout>