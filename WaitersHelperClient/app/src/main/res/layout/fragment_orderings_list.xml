<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="brytskyi.waitershelperclient.app.activities.orderings.OrderingsListFragment">

    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
                 android:background="@drawable/fon">

        <ListView
                android:layout_width="fill_parent"
                android:layout_weight="20"
                android:layout_height="0dp"
                android:id="@+id/allOrderingsList" android:background="#b1fff32f"/>

        <TableRow android:layout_weight="0.3" android:layout_width="fill_parent" android:layout_height="0dp"
                  android:background="#00caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">

                <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/userTakenSpinnerInOrderinsList" android:layout_gravity="center"
                        android:gravity="center"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:id="@+id/dateBeginPickerInOrderinsList"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:id="@+id/dateEndPickerInOrderinsList"/>


            </LinearLayout>
        </TableRow>

        <TableRow android:layout_weight="0.2" android:layout_width="fill_parent" android:layout_height="match_parent"
                  android:background="#00caff" android:gravity="center">
            <LinearLayout android:layout_width="0dp" android:layout_weight="1">
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/find"
                        android:id="@+id/findOrderingsButtonInOrderingsList" android:layout_gravity="center"
                        android:gravity="center"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>


</FrameLayout>

